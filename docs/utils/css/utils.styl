$toggleButtonSize = 64px
$toggleButtonDesktopSize = 36px

html
body
  overflow hidden !important

body
  -webkit-touch-callout none
  -webkit-user-select none

#stats
  background black
  bottom 0
  color rgb(0, 255, 0)
  padding 5px
  position fixed
  z-index 1
  left 0
  .is-hidden &
    display none

.toggle-button
  background black
  border none
  border-radius 0
  color white
  font-family inherit
  font-size larger
  height: $toggleButtonSize
  position fixed
  z-index 1
  text-align center
  width: $toggleButtonSize
  -webkit-touch-callout none
  -webkit-user-select none
  user-select none
  @media (min-width: 768px)
    height: $toggleButtonDesktopSize
    width: $toggleButtonDesktopSize
  &:focus
  &.active
    background yellow
    color black
    outline 0

$readmeOffsetWidth = 50px
#readme
  position fixed
  z-index 2
  .wrapper
    -webkit-overflow-scrolling touch
    background #fafafa
    height 100%
    overflow-x hidden
    overflow-y auto
    position fixed
    right 0
    top 0
    width: 'calc(100% - %s)' % $readmeOffsetWidth
  .is-hidden &
    display none
  &:not(.is-show)
    .wrapper
      display none
  &.is-show
    .cover
      position fixed
      width: $readmeOffsetWidth
      height 100%
      background rgba(0, 0, 0, .5)
  .markdown
    padding 1rem
    > *:first-child
      margin-top 0
    h2 + ul
      list-style none
      padding-left 0
      a
        margin-left .5rem
    h3 + ul
      padding-left 1.5rem
  .title
    margin 0
    padding 0 1rem
    &:first-child
      padding-top 1rem
  pre
    margin 0
  code
    padding 1rem 1rem 2rem
    -webkit-user-select all
    user-select all
  .toggle-button
    bottom 0
    right 0
    &:after
      content: 'ⓘ'
  &.is-show
    .toggle-button
      &:after
        content: '✕'

#playback
  .toggle-button
    bottom: $toggleButtonSize + 1
    right 0
    &:after
      content: 'Ⅱ'
    @media (min-width: 768px)
      bottom: $toggleButtonDesktopSize + 1
  &.is-paused
    .toggle-button
      &:after
        content: '▸'
  .is-hidden &
    display none

#arrowkeys
  position fixed
  z-index 1
  .is-hidden &
    display none
  @media (orientation: portrait)
    bottom 0
    left 0
  @media (orientation: landscape)
    top: $toggleButtonSize * 2
    right: $toggleButtonSize * 3 
  @media (orientation: landscape) and (min-width: 768px)
    top: $toggleButtonDesktopSize * 2
    right: $toggleButtonDesktopSize * 3 
  .toggle-button
    position absolute
  .UP
    bottom: $toggleButtonSize + 1
    left: $toggleButtonSize + 1
    @media (min-width: 768px)
      bottom: $toggleButtonDesktopSize + 1
      left: $toggleButtonDesktopSize + 1
    &:after
      content: '↑'
  .DOWN
    bottom 0
    left: $toggleButtonSize + 1
    @media (min-width: 768px)
      left: $toggleButtonDesktopSize + 1
    &:after
      content: '↓'
  .RIGHT
    bottom: $toggleButtonSize * .5
    left: ($toggleButtonSize + 1) * 2
    @media (min-width: 768px)
      bottom: $toggleButtonDesktopSize * .5
      left: ($toggleButtonDesktopSize + 1) * 2
    &:after
      content: '→'
  .LEFT
    bottom: $toggleButtonSize * .5
    left 0
    @media (min-width: 768px)
      bottom: $toggleButtonDesktopSize * .5
    &:after
      content: '←'
